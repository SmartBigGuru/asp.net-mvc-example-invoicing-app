@model IPagedList<Customer>
@using MvcPaging;

@{
    ViewBag.Title = "Customers";
}

<div id="ajaxReponse">

<h1>List <small>of Customers</small></h1>

<p>
    @Html.ActionLink("Create new Customer", "Create", null, new {@class="btn"})
</p>

@{Html.RenderPartial("SearchBoxCompany", "Customer");}


<div class="pagingContainer">
    @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
</div>

<table class="zebra-striped">
    <thead>
        <th>
            Name
        </th>
        <th>
            CompanyNumber
        </th>
       
        <th>
            City
        </th>
        <th>
            Phone1
        </th>
        <th>
            Email
        </th>
        <th></th>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyNumber)
        </td>
      
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CustomerID }, new { @class = "btn primary"}) 
            @Html.ActionLink("Details", "Details", new { id=item.CustomerID }, new { @class = "btn"}) 
            @Html.ActionLink("Delete", "Delete", new { id=item.CustomerID }, new { @class = "btn"})
        </td>
    </tr>
}

</table>
</div>