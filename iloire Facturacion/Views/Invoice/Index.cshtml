@model IEnumerable<Invoice>

@{
    ViewBag.Title = "Index";
}

<h1>List <small>of Invoice</small></h1>

<p>
    @Html.ActionLink("Create New", "Create", null, new {@class="btn"})
</p>
<table class="zebra-striped">
    <thead>
        <th>
            Customer
        </th>
        <th>
            Notes
        </th>
        <th>
            TimeStamp
        </th>
        <th>
            Paid
        </th>
        <th></th>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeStamp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Paid)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.InvoiceID }, new { @class = "btn primary"}) |
            @Html.ActionLink("Details", "Details", new { id=item.InvoiceID }, new { @class = "btn"}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.InvoiceID }, new { @class = "btn"})
        </td>
    </tr>
}

</table>
<script>
	$(document).ready(function() {
		$("table.zebra-striped").tablesorter({ sortList: [[1,0]] });
	});
</script>

