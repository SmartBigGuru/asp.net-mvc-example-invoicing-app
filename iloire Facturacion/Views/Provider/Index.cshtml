@model IEnumerable<Provider>

@{
    ViewBag.Title = "Index";
}

<h1>List <small>of Provider</small></h1>

<p>
    @Html.ActionLink("Create New", "Create", null, new {@class="btn"})
</p>
<table class="zebra-striped">
    <thead>
        <th>
            Name
        </th>
        <th>
            CompanyNumber
        </th>
        <th>
            Address
        </th>
        <th>
            CP
        </th>
        <th>
            City
        </th>
        <th>
            Phone1
        </th>
        <th>
            Phone2
        </th>
        <th>
            Fax
        </th>
        <th>
            Email
        </th>
        <th></th>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProviderID }, new { @class = "btn primary"}) |
            @Html.ActionLink("Details", "Details", new { id=item.ProviderID }, new { @class = "btn"}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProviderID }, new { @class = "btn"})
        </td>
    </tr>
}

</table>
<script>
	$(document).ready(function() {
		$("table.zebra-striped").tablesorter({ sortList: [[1,0]] });
	});
</script>

